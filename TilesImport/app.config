<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
  </configSections>
  <log4net>
    <!--定义输出到文件中-->
    <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
      <!--定义文件存放位置-->
      <file value="C:\\QRST_TileImportError_Log\ErrorLog.txt" />
      <param name="AppendToFile" value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd-HH:mm:ss" /><!---日期模式字符串，计算文件的显示日期-->
      <!--最小锁定模型以允许多个进程可以写入同一个文件-->
      <param name="lockingModel"  type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value=" 时间：%d %message%newline " />
      </layout>
    </appender>
    <logger name="infor">
      <level value="ALL"/>
      <appender-ref ref="infor" />
      <appender-ref ref="RFAppenderInfor" />
    </logger>
    <root>
      <!--文件形式记录日志-->
      <appender-ref ref="LogFileAppender" />
    </root>
  </log4net>
  <appSettings>
    <!-- 数据库连接字符串(MySQL版) -->
    <add key="ConnectionStringMySql" value="server =202.121.180.31; user id = HJDATABASE_ADMIN; password = dbadmin_2011; charset = utf8; database = midb" />
    <!--通信服务器连接字符串-->
    <add key="DbServerIp" value="127.0.0.1" />
    <add key="BaseUtilityTcpPort" value="51112" />
    <!--系统语言设置 中文=ch，英文=en，默认中文-->
    <add key="SystemLanguage" value="en" />
    <!--数据库通信方式.single/multiple. SQLite版可single/multiple. MySQL版只multiple-->
    <add key="DbCommunication" value="multiple"/>
  </appSettings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
